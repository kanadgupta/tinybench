{
  "compilerOptions": {
    "target": "ES2018",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "lib": []
  },
  "include": ["src", "test", "@types"],
  "exclude": ["node_modules", "dist"],
  "removeComments": true,
  "newLine": "lf"
}
